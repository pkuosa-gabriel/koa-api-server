{
  "name": "koa-api-server",
  "version": "0.1.0",
  "description": "A simple RESTful API server based on koa.js",
  "main": "src/server/index.ts",
  "repository": "git@github.com:pkuosa-gabriel/koa-api-server.git",
  "author": "Gabriel Wu <qqbbnease1004@126.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "debug": "^4.1.1",
    "knex": "^0.16.3",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "pg": "^7.9.0",
    "ts-node": "^8.0.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/debug": "^4.1.3",
    "@types/jest": "^24.0.11",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "@types/node": "^11.13.0",
    "@types/supertest": "^2.0.6",
    "@types/webpack": "^4.4.27",
    "babel-loader": "^8.0.5",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "koa-webpack": "^5.2.2",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  },
  "scripts": {
    "dev": "NODE_ENV=development ts-node -O '{\"module\": \"commonjs\"}' ./src/server/index.ts",
    "start": "NODE_ENV=development nodemon",
    "format": "prettier --write \"**/*.+(js|ts|json|md)\"",
    "coverage": "yarn test --coverage",
    "test": "NODE_ENV=test jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "build": "yarn build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "bundle": "NODE_ENV=production webpack",
    "knex": "ts-node node_modules/.bin/knex",
    "migrate": "yarn knex migrate:latest --env ",
    "seed": "yarn knex seed:run --env "
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn coverage && lint-staged"
    }
  }
}
